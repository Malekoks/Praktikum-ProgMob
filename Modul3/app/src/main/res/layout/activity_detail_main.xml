<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="DetailMain"
    android:background="@color/dcream">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/orkney_bold"
            android:gravity="start"
            android:text="@string/str_welcome"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="28sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="140dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="30dp"

                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/cream">

                    <TextView
                        android:id="@+id/kategori"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/bg_edittext_login"
                        android:fontFamily="@font/orkney_bold"
                        android:gravity="center_horizontal"
                        android:text="Data Pasien"
                        android:textAlignment="center"
                        android:textColor="@color/ddcream"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textnama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/kategori"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="35dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/orkney_bold"
                        android:text="Nama "
                        android:textColor="@color/ddcream"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textnama"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="35dp"
                        android:text="Nama "
                        android:textSize="16sp"
                        android:layout_marginLeft="35dp" />

                    <TextView
                        android:id="@+id/textalamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nama"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/orkney_bold"
                        android:text="Alamat"
                        android:textColor="@color/ddcream"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="35dp" />

                    <TextView
                        android:id="@+id/alamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textalamat"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="35dp"
                        android:text="Alamat"
                        android:textSize="16sp"
                        android:layout_marginLeft="35dp" />

                    <TextView
                        android:id="@+id/textjk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/alamat"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/orkney_bold"
                        android:text="Jenis Kelamin"
                        android:textColor="@color/ddcream"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="35dp" />

                    <TextView
                        android:id="@+id/jeniskelamin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textjk"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="35dp"
                        android:layout_marginLeft="35dp"
                        android:text="Jenis Kelamin"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/txgej"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/jeniskelamin"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/orkney_bold"
                        android:text="Gejala"
                        android:textColor="@color/ddcream"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="35dp" />

                    <TextView
                        android:id="@+id/gejala"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txgej"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="35dp"
                        android:layout_marginLeft="35dp"
                        android:text="Gejala"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textumur"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/gejala"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="35dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/orkney_bold"
                        android:text="Umur"
                        android:textColor="@color/ddcream"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/umur"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textumur"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="35dp"
                        android:layout_marginBottom="20dp"
                        android:text="100"
                        android:textSize="16sp"
                        android:layout_marginLeft="35dp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>